{
  "manifest_version": 3,
  "name": "PhishingGuard",
  "version": "0.1.0",
  "description": "Multimodal phishing shield: emails, URLs, images (Phase 2 scaffold)",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
